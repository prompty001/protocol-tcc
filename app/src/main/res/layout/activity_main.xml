<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38383C"
        tools:context=".MainActivity">
    <Button
            android:text="Criar Conta"
            android:layout_width="379dp"
            android:layout_height="60dp" android:id="@+id/init_btn_registration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/init_btn_login"
            android:backgroundTint="#EC0606" android:textColor="#F1E8E8"
            app:layout_constraintBottom_toTopOf="@+id/materialToolbar"
            app:layout_constraintVertical_bias="0.008"/>
    <Button
            android:text="Iniciar Sessão"
            android:layout_width="377dp"
            android:layout_height="60dp" android:id="@+id/init_btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/init_lb_welcome"
            android:backgroundTint="#122AAA" android:textStyle="bold" android:textColor="#F1E8E8"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.041"/>
    <TextView
            android:text="Inicie a sessão ou crie uma nova conta para acessar a rede da UFPA."
            android:layout_width="347dp"
            android:layout_height="0dp" android:id="@+id/init_lb_welcome"
            android:textSize="20sp" android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp" android:textColor="#EFE8E8"/>
    <ImageView
            android:layout_width="225dp"
            android:layout_height="144dp" app:srcCompat="@drawable/ufpa" android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/init_lb_welcome"/>
    <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="414dp"
            android:layout_height="47dp"
            android:background="#1E1E20"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/materialToolbar" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="LABSC - UFPA, 2022"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/materialToolbar"
            app:layout_constraintStart_toStartOf="@+id/materialToolbar" android:textStyle="bold"
            android:textColor="#F2EDED" app:layout_constraintTop_toTopOf="@+id/materialToolbar"
            app:layout_constraintBottom_toBottomOf="@+id/materialToolbar" android:textSize="10sp"/>
    <ImageButton
            android:layout_width="64dp"
            android:layout_height="56dp" app:srcCompat="@drawable/abouttttt" android:id="@+id/init_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#38383C" android:visibility="visible"
            android:scaleType="fitCenter" tools:ignore="SpeakableTextPresentCheck"/>
</androidx.constraintlayout.widget.ConstraintLayout>