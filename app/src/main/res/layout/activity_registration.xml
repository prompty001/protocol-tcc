<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registration" android:background="#38383C">
    <TextView
            android:text="Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            android:textColor="#C2B9B9" android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/input_email" android:layout_marginTop="68dp"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textColor="#C2B9B9" android:textSize="16sp"/>
    <EditText
            android:layout_width="386dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_email"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" tools:ignore="SpeakableTextPresentCheck"/>
    <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_passwd"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.156"
            tools:ignore="SpeakableTextPresentCheck"/>
    <TextView
            android:text="Dê preferência a uma senha com no mínimo oito caracteres, contendo pelo menos um número, uma letra maiúscula e um caractere especial. "
            android:layout_width="386dp"
            android:layout_height="60dp" android:id="@+id/textView5"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="@+id/input_passwd" android:textColor="#C2B9B9"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp" android:textAlignment="textStart"/>
    <TextView
            android:text="CPF"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/textView6"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@+id/textView5" android:textSize="16sp" android:textColor="#C2B9B9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_cpf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
    <TextView
            android:text="Data de Nascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textColor="#C2B9B9"
            app:layout_constraintTop_toTopOf="@+id/input_cpf" android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/input_birth"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.064"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
    <Button
            android:text="Enviar"
            android:layout_width="377dp"
            android:layout_height="60dp" android:id="@+id/btn_reg_send"
            android:backgroundTint="#122AAA" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/input_birth"
            android:layout_marginTop="84dp" android:textColor="#F1E8E8" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>