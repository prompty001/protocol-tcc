<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registration" android:background="#38383C">
    <EditText
            android:layout_width="386dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_name"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="12dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <EditText
            android:layout_width="386dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_email"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="15dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Data de Nascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textColor="#C2B9B9"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/input_cpf"
            android:layout_marginTop="28dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/input_birth"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="15dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_passwd"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="15dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textColor="#C2B9B9" android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/input_email"
            android:layout_marginTop="36dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_cpf"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="15dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:text="Dê preferência a uma senha com no mínimo oito caracteres, contendo pelo menos um número, uma letra maiúscula e um caractere especial. "
            android:layout_width="386dp"
            android:layout_height="60dp" android:id="@+id/textView5"
            android:textColor="#C2B9B9"
            android:textSize="14sp" android:textAlignment="textStart"
            tools:layout_editor_absoluteX="15dp" app:layout_constraintTop_toBottomOf="@+id/input_passwd"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textColor="#C2B9B9" android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/input_name"
            android:layout_marginTop="28dp"/>
    <TextView
            android:text="CPF"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/textView6"
            android:textSize="16sp" android:textColor="#C2B9B9"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="Enviar"
            android:layout_width="377dp"
            android:layout_height="60dp" android:id="@+id/btn_reg_send"
            android:backgroundTint="#122AAA"
            android:textColor="#F1E8E8" android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/input_birth"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            android:textColor="#C2B9B9"
            android:textSize="16sp" tools:layout_editor_absoluteX="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>